import java.util.Scanner;

/**
 * Essa classe calculará o consumo médio do carro tendo como parametros a distância e a quantidade de combustível consumido
 * @author aluno
 *
 */
public class ConsumoCombustivel {
	public static void main(String[] args) {
		float  consumo, qtd_comb, distancia;
		Scanner leitor = new Scanner(System.in);
		System.out.println("Digite a Quantidade de combustivel que foi consumida");
		qtd_comb = leitor.nextFloat();
		System.out.println("Digite a Distancia percorrida pelo veiculo em Kilometros");
		distancia = leitor.nextFloat();
		consumo = (distancia/qtd_comb);
		System.out.println("O consumo desse carro eh de " +consumo +" kilometros por litro");
		leitor.close();
	}
}
